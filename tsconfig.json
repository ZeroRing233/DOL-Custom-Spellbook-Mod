{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ESNext"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["./src/winDef.d.ts", "node", "twine-sugarcube"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src", "rspack.config.ts", "utils"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
